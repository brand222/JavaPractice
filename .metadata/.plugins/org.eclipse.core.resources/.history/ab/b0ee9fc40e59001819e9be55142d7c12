package advancedArrays;

public class arraysInMethods {

	
	public static void main(String[] args) {
		
		int brandon[] = {3, 4, 5, 6, 7};
		changeArray(brandon);
	}
	
	//here we created a method that accepts a single integer array as a parameter
	public static void changeArray(int x[]){
		//for each integer inside of the array passed into the method,
		//add 5 to each item (as it loops through each index.
		for (int i: x) {
			x[i] += 5;
		}
	}
}
