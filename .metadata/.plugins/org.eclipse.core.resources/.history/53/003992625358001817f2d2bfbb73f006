package basics;

public class compoundInterest {
public static void main(String[] args) {

	double amount;
	double principle = 15000;
	double rate = .01;
	for (int month = 1; month<=3; month++) {
		amount = principle* Math.pow(1+ rate, month);
		System.out.println(month + "   " + amount);
	}
}
}

		
