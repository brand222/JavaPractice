
public class variableLengthArguments {

	public static void main(String[] args) {
		System.out.println(average(2, 5, 3, 5, 7, 3, 2, 4, 5, 6 ,7, 500, 1));
	}
	
	public static int average(int...numbers) {
		int total = 0;
		for (int x: numbers) {
			total += x;
		}
		return total/numbers.length;
	}
}
